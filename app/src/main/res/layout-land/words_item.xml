<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/card_selector"
    app:cardCornerRadius="4dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/word_name"
            android:text="testOfVoid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/word_translate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:text="这里是翻译，翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译"
            android:textSize="16dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/buttonAmeV1"
                android:layout_width="44dp"
                android:layout_height="49dp"
                android:background="@drawable/ic_launcher_foreground"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/play_button"
                android:layout_weight="1"
                />




            <TextView
                android:id="@+id/Text_show_usa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"


                android:text="美音" />
            <ImageButton
                android:id="@+id/buttonEngV2"
                android:layout_width="44dp"
                android:layout_height="49dp"
                android:background="@drawable/ic_launcher_foreground"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/play_button"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/Text_show_eng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="英音" />


        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>