<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/card_selector"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/buttonAmeV1"
                android:layout_width="44dp"
                android:layout_height="49dp"
                android:background="#ffffff"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/play_button"

                />

            <TextView
                android:id="@+id/word_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"

                android:layout_weight="1"
                android:text="testOfVoid"
                android:textSize="20dp"

                />

            <TextView
                android:id="@+id/inputw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text=""
                android:textSize="20dp"

                />

        </LinearLayout>


        <TextView
            android:id="@+id/word_translate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="#cccccc"
            android:text="测试测试测试测试，标准长度巴巴爸爸吧吧不不不不不不不不不不不不不不不不不不不不反应液晕晕晕晕晕晕晕晕晕晕晕晕晕晕晕晕晕晕晕晕晕晕晕晕晕晕晕晕晕晕晕晕晕晕晕晕晕晕晕晕晕"
            android:textSize="16dp" />




    </LinearLayout>

</androidx.cardview.widget.CardView>