<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/card_selector"
    app:cardCornerRadius="4dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/sentence_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No."
                android:layout_weight="12"
                />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/sentence_english"
                    android:text="testOfVoid测试，测试testOfVoid测试，测试testOfVoid测试，测试testOfVoid测试，测试testOfVoid测试，测试testOfVoid测试，测试testOfVoid测试，测试"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textIsSelectable="true"
                    android:layout_margin="5dp"
                    android:layout_marginRight="10dp"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/sentence_translate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:layout_marginRight="10dp"
                    android:text="这里是翻译，翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译翻译"
                    android:textSize="16dp" />

            </LinearLayout>
        </LinearLayout>





    </LinearLayout>

</androidx.cardview.widget.CardView>